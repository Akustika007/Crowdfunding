{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row no-gutters justify-content-center">
            <div class="col-12 col-lg-4 col-md-4">
                <div class="form-login shadow-lg ">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                Вы уже вошли как {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <h1 class="h3 mb-3 font-weight-normal text-center">Вход</h1>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               class="form-control mb-3" placeholder="Ваш email" required autofocus>
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Пароль" required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                        #}
                        <button class="btn btn-primary mt-5 btn-block" type="submit">
                            Войти
                        </button>
                        <div class="mt-2 text-center">Первый раз тут? <a href="{{ path('app_signup') }}">Зарегистрироваться</a></div>
                    </form>
                </div>
            </div>
        </div>
    </div>


{% endblock %}


