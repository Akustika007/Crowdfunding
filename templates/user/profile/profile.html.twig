{% extends 'user/profile/baseProfile.html.twig' %}


{% block content %}
    <div class="row g-0">
        <div class="col-md-3" style="margin-top: 15px">
            <img style="width: 100%;" src="https://www.soundandvision.ee/wp-content/uploads/2019/05/profile-img.jpg" alt="...">
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><b>{% trans %}name {% endtrans %}</b>:  {{ user.name }}</li>
                    <li class="list-group-item"><b>{% trans %}email{% endtrans %}</b>: {{ user.email }}</li>
                    <li class="list-group-item"><b>{% trans %}phone{% endtrans %}</b>: {{ user.phone }}</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container p-3 my-3 border">
        <div class="d-flex justify-content-between">
            <h2 class="font-weight-normal pb-2">{% trans %}user.campaigns{% endtrans %}</h2>
            <a href="{{ path('camp_create') }}" class="btn btn-success pt-2">{% trans %}user.create{% endtrans %}</a>
        </div>

        {{ render_esi(url('camp_list')) }}
    </div>
{% endblock %}

