{% extends 'base.html.twig' %}

{% block title %}Crowdfunding | {{ 'reg.title'|trans }}{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row no-gutters justify-content-center">
        <div class="col-12 col-lg-4 col-md-4">
            <div class="form-login shadow-lg">
                {% for flashError in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                {% endfor %}
                <h1 class="h3 mb-4 font-weight-normal text-center">{{ 'reg.title'|trans }}</h1>
                {{ form_start(signup, {'method': 'POST'}) }}
                <div class="row mb-3">
                    {{ form_errors(signup.name) }}
                    {{ form_widget(signup.name) }}
                </div>
                <div class="row mb-3">
                    {{ form_errors(signup.phone) }}
                    {{ form_widget(signup.phone) }}
                </div>
                <div class="row mb-3">
                    {{ form_errors(signup.email) }}
                    {{ form_widget(signup.email) }}
                </div>
                <div class="row mb-3">
                    {{ form_errors(signup.plainPassword.first) }}
                    {{ form_widget(signup.plainPassword.first) }}
                </div>
                <div class="row mb-3">
                    {{ form_errors(signup.plainPassword.second) }}
                    {{ form_widget(signup.plainPassword.second) }}
                </div>
                <div class="row mb-1">
                    {{ form_errors(signup.agreeTerms) }}
                    {{ form_widget(signup.agreeTerms) }}
                </div>
                <div class="row">
                    {{ form_widget(signup.save) }}
                </div>
                {{ form_end(signup) }}
                <div class="mt-2 text-center">{{ 'reg.log_message'|trans }} <a href="{{ path('app_login') }}">{{ 'reg.entry'|trans }}</a></div>
            </div>
        </div>
    </div>
</div>
{% endblock %}



